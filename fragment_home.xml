<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/gradStart">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/konversi_satuan_panjang"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/judul"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pilih_satuan"
                android:textSize="15sp"
                android:id="@+id/satuan"
                android:layout_alignParentLeft="true"/>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/nilai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukkan Nilai"
                android:textSize="15sp"
                android:layout_below="@id/spinner1"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/angka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nilai"
                android:inputType="numberDecimal"
                android:lines="1"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/konversi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/angka"
                android:textSize="15sp"
                android:text="Dikonversi ke dalam"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/konversi"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="30dp" />

            <Button
                android:id="@+id/hitung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner2"
                android:text="Hitung"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/hasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_below="@id/hitung"/>


        </RelativeLayout>


    </RelativeLayout>




</FrameLayout>